<!--index.wxml-->
<view class="container">

  <view class="userinfo">
    <block wx:if="{{ isLogin }}">
        <view class="userinfo-avatar" bindtap="logout">
          <open-data type="userAvatarUrl"></open-data>
        </view>
        <open-data type="userNickName"></open-data>
    </block>
    <block wx:else>
      <button bindtap="login"> 登录 </button>
      {{openId}}
    </block>
  </view>

  <view class="userinfocontainer">
    <view class="content">
      <van-cell icon="location-o" size="large" title="姓名" value="内容" is-link />
      <van-cell icon="location-o" size="large" title="已看视频数量" value="内容" is-link />
      <van-cell icon="location-o" size="large" title="未看视频数量" value="内容" is-link />
      <van-cell icon="location-o" size="large" title="全部试卷" value="内容" is-link />
      <van-cell icon="location-o" size="large" title="未做试卷" value="内容" is-link />
      <van-cell icon="location-o" size="large" title="积分" value="内容" is-link />
    </view>
  </view>

</view>
