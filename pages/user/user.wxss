/**index.wxss**/
page {
  background: #E4E2E5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  width: 100%;
  height: 20vh;
  background-color: #377EB4;
}

.userinfocontainer {
  background: #FFFFFF;
  border-radius: 36rpx;
  margin-top: -5vh;
  z-index: 2;
  width: 90%;
  height: 80vh;
}

.name {
  position: fixed;
  top: 5vh;
  left: 20vh;
}

.content {
  margin-top: 4vh;
  align-items: center;
}

.userinfo-avatar {
  overflow: hidden;
  align-self:flex-start;
  width: 128rpx;
  height: 128rpx;
  margin-top: 20rpx;
  margin-left: 5vh;
  border-radius: 50%;
}

.emptyUserLogo{
  overflow: hidden;
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
}