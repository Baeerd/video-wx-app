/**index.wxss**/
page {
  background: #bde5f8;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  width: 100%;
  height: 30vh;
  background-color: #03B8CF;
}

.userinfocontainer {
  background: #FFFFFF;
  border-radius: 36rpx;
  margin-top: -40rpx;
  z-index: 2;
  width: 84%;
  height: 65vh;
}

.content {
  margin-top: 100rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 168rpx;
  height: 168rpx;
  margin-top: 50rpx;
  border-radius: 50%;
}

.emptyUserLogo{
  overflow: hidden;
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
}